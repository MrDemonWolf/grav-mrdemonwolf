<!-- Jumbotron Hero -->
<div class="jumbotron hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="row">
                    <div class="jumbotron inner-hero">
                        {% for hero in page.header.hero %}
                            <h1 class="text">{{ hero.title }}</h1>
                        {% endfor %}
                        <div class="animate-text">
                            {% for isa in page.header.isa %}
                                <span>{{ isa.name }}</span>{% endfor %}
                        </div>
                    </div>
                </div>
                <div class="cta-button">
                    {% for button in page.header.button %}
                        <a class="btn btn-primary btn-lg btn-cta" href="{{ button.url }}" role="button">{{ button.title }}</a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>