{% extends 'partials/base.html.twig' %}
{% block content %}
    <div class="radio">
        <div class="script">
            <script type="text/javascript" src="https://proxima.radiovendor.com:2199/system/streaminfo.js"></script>
            <script type="text/javascript" src="https://proxima.radiovendor.com:2199/system/recenttracks.js"></script>
            <script type="text/javascript">
                //<![CDATA[
                $(document).ready(function () {
                    $("#jquery_jplayer_1").jPlayer({
                        ready: function () {
                            $(this).jPlayer("setMedia", {mp3: "http://proxima.radiovendor.com:8000/listen.mp3"});
                        },
                        swfPath: "{{ url('theme://lib/jplayer/js/jquery.jplayer.swf')}}",
                        supplied: "mp3",
                        wmode: "window",
                        useStateClassSkin: true,
                        globalVolume: true,
                        autoBlur: false,
                        smoothPlayBar: true,
                        keyEnabled: true,
                        remainingDuration: true,
                        toggleDuration: true
                    });
                });

                //]]>
            </script>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-12 mr-auto">
                    <div class="details">
                        <div class="title">
                            {{ page.header.about.header }}
                        </div>
                        <div class="description">
                            {{ page.header.about.description }}
                        </div>

                        {% for details in page.header.details %}
                            <div class="title">{{ details.title }}</div>
                            <div id="radio_title">
                                <span class="cc_streaminfo" data-type="{{ details.dataType }}" data-username="{{ details.dataUsername }}">Loading...</span>
                            </div>
                        {% endfor %}

                    </div>
                    {% if page.header.songrequests.enabled %}
                        <div class="songrequest">
                            <a type="button" class="btn btn-large btn-block btn-default" href="{{ base_url_absolute }}/radio/songrequest" target="_blank">Request Song</a>
                        </div>
                    {% endif %}
                </div>
                <div class="col-md-6 col-12 ml-auto">
                    <div id="jquery_jplayer_1" class="jp-jplayer"></div>
                    <div id="jp_container_1" class="jp-audio" role="application" aria-label="media player">
                        <div class="jp-type-single">
                            <div class="jp-gui jp-interface">
                                <div class="jp-controls">
                                    <button class="jp-play" role="button" tabindex="0">play</button>
                                    <button class="jp-stop" role="button" tabindex="0">stop</button>
                                </div>
                                <div class="jp-volume-controls">
                                    <button class="jp-mute" role="button" tabindex="0">mute</button>
                                    <button class="jp-volume-max" role="button" tabindex="0">max volume</button>
                                    <div class="jp-volume-bar">
                                        <div class="jp-volume-bar-value"></div>
                                    </div>
                                </div>
                                <div class="jp-time-holder">
                                    <div class="jp-current-time" role="timer" aria-label="time">&nbsp;</div>
                                </div>
                            </div>
                            <div class="jp-no-solution">
                                <span>Update Required</span>
                                To play the media you will need to either update your browser to a recent version or update your
                                <a href="http://get.adobe.com/flashplayer/" target="_blank">Flash plugin</a>.
                            </div>
                        </div>
                    </div>
                    <div id="cc_tunein">
                        <a href="https://proxima.radiovendor.com:2199/tunein/mrdemonwolf.pls">
                            <img align="absmiddle" src="https://proxima.radiovendor.com:2199/system/images/tunein-pls.png" border="0" alt="Winamp, iTunes" title="Winamp, iTunes"/>
                        </a>
                        <a href="https://proxima.radiovendor.com:2199/tunein/mrdemonwolf.asx">
                            <img align="absmiddle" src="https://proxima.radiovendor.com:2199/system/images/tunein-asx.png" border="0" alt="Windows Media Player" title="Windows Media Player"/>
                        </a>
                        <a href="https://proxima.radiovendor.com:2199/tunein/mrdemonwolf.ram">
                            <img align="absmiddle" src="https://proxima.radiovendor.com:2199/system/images/tunein-ram.png" border="0" alt="Real Player" title="Real Player"/>
                        </a>
                        <a href="https://proxima.radiovendor.com:2199/tunein/mrdemonwolf.qtl">
                            <img align="absmiddle" src="https://proxima.radiovendor.com:2199/system/images/tunein-qtl.png" border="0" alt="QuickTime" title="QuickTime"/>
                        </a>
                    </div>
                    <div class="cc_recenttracks_list recent_songs" data-username="mrdemonwolf">Loading ...</div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
