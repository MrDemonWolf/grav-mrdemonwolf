{% extends 'partials/base.html.twig' %}

{% block content %}
    <ul>
        {% for post in page.find('/blog').children.order('date', 'desc').slice(0, 5) %}
            <li class="recent-posts">
                <strong>
                    <a href="{{ post.url }}">{{ post.title }}</a>
                </strong>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
