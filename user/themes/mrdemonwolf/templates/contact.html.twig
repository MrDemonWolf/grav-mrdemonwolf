{% extends 'partials/base.html.twig' %}

{% block content %}
{% for contact in page.header.contact %}
<!-- Contact -->
<div id="contact" class="contact">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="get-in-touch">
          <h3 class="title">{{ contact.title }}</h3>
          <form class="contact-form row row-contact" action="https://formspree.io/{{ contact.email }}" method="POST">
            {% for form in page.header.form %}
              <div class="form-field col {{ form.col }}">
                <input id="{{ form.id }}" class="input-text js-input" type="{{ form.type }}" name="{{ form.name }}" required>
                <label class="label" for="{{ form.id }}">{{ form.label }}</label>
              </div>
            {% endfor %}
            <div class="form-field col x-100 btn-center">
              <input class="btn btn-primary btn-lg btn-cta" type="submit" value="Send">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endfor %}

{% endblock %}
