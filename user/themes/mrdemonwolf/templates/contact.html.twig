{% extends 'partials/base.html.twig' %}
{% block content %}
    {% for contact in page.header.contact %}
        <!-- Contact -->
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="get-in-touch">
                        <h3 class="title">{{ contact.title }}</h3>
                        <form class="contact-form row row-contact" action="https://formspree.io/{{ contact.email }}" method="POST">
                            {% for info in page.header.form.info %}
                                <div class="form-field form-col {{ info.col }}">
                                    <input id="{{ info.id }}" class="input-text js-input" type="{{ info.type }}" name="{{ foinfom.name }}" {% if info.required %} required="required" {% endif %}>
                                    <label class="{{ info.labelClass }}" for="{{ info.id }}">{{ info.label }}</label>
                                </div>
                            {% endfor %}
                            {% for message in page.header.form.message %}
                                <div class="form-field form-col col-12">
                                    <textarea id="{{ message.id }}" rows="10" cols="30" class="input-text js-input" type="{{ message.type }}" name="{{ message.name }}" data-gramm_editor="false" {% if message.required %} required="required" {% endif %}></textarea>
                                    <label class="{{ message.labelClass }}" for="{{ form.id }}">{{ message.label }}</label>
                                </div>
                            {% endfor %}
                            <div class="form-field form-col x-100 btn-center">
                                <input class="btn btn-primary btn-lg btn-cta" type="submit" value="Send">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endfor %}
{% endblock %}