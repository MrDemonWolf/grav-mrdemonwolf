{% for meta in page.metadata %}
<meta {% if meta.name %}name="{{ meta.name }}" {% endif %}{% if meta.http_equiv %}http-equiv="{{ meta.http_equiv }}" {% endif %}{% if meta.charset %}charset="{{ meta.charset }}" {% endif %}{% if meta.property %}property="{{ meta.property }}" {% endif %}{% if meta.content %}content="{{ meta.content }}" {% endif %}/>
{% endfor %}
<meta name="twitter:card" content="website">
<meta name="twitter:site" content="{{ base_url_absolute }}">
<meta name="twitter:title" content="{{ page.title }}">
<meta name="twitter:description" content="{{ config.site.metadata.description }}">
<meta name="twitter:creator" content="@mrdemonwolf">
<meta name="twitter:image" content="{{ url('theme://images/logo/twitter.png') }}">
<meta property="og:title" content="{{ page.title }}"/>
<meta property="og:site_name" content="{{ config.site.title }}"/>
<meta property="og:type" content="website"/>
<meta property="og:url" content="{{ base_url_absolute }}"/>
<meta property="og:image" content="{{ url('theme://images/logos/logo.png') }}"/>
<meta property="og:description" content="{{ config.site.metadata.description }}"/>
