<div class="col-6 post">
    <a href="{{ post.url }}">
        <img class="img-thumbnail post-image" src="http://i50.tinypic.com/2nbf0ht.jpg" alt="blog post image">
    </a>
    <div class="post-meta">
        <div class="title">{{ post.title }}</div>
        <i class="far fa-calendar-alt" aria-hidden="true"></i>
        <span>
            {{ post.date | date("m/d/Y") }}
        </span>
    </div>
    {% if post.taxonomy.tag | length > 0 %}
        <div class="tags">
            <i class="fas fa-tags" aria-hidden="true"></i>
            {% for tag in post.taxonomy.tag %}
                <a href="{{ base_url }}/tag{{ config.system.param_sep }}{{ tag }}">{{ tag }}</a>
            {% endfor %}
        </div>
    {% endif %}
    <i class="fas fa-clock"></i>
    <span class="readTime">{{ post.content | readingtime }}</span>
    <p>{{ post.content | striptags | truncate(115) }}</p>
    <a class="btn btn-primary btn-sm" href="{{ post.url }}">Read More</a>
</div>
