{% for twitch in config.site.twitchNotice %}
    <script>
        // Twitch Banner
        $(document).ready(function twitchNotice() {
            var username,
                api_key;
            // Infos
            username = '{{ twitch.username }}';
            api_key = '{{ twitch.apikey }}';

            $.getJSON('https://api.twitch.tv/kraken/streams/' + username + '?client_id=' + api_key + '&callback=?', function (data) {
                if (data.stream) {
                    $.notify({
                        // options
                        icon: 'fab fa-twitch',
                        message: `Currently streaming live!`,
                        url: `https://www.twitch.tv/${username}`,
                        target: '_blank'
                    }, {
                        // settings
                        element: 'body',
                        position: null,
                        type: "info",
                        allow_dismiss: true,
                        newest_on_top: false,
                        showProgressbar: false,
                        placement: {
                            from: "bottom",
                            align: "right"
                        },
                        offset: 20,
                        spacing: 10,
                        z_index: 1031,
                        delay: 50000,
                        timer: 1000,
                        url_target: '_blank',
                        mouse_over: null,
                        animate: {
                            enter: 'animated fadeInDown',
                            exit: 'animated fadeOutUp'
                        },
                        onShow: null,
                        onShown: null,
                        onClose: null,
                        onClosed: null,
                        icon_type: 'class',
                        template: '<div data-notify="container" class="col-10 col-md-3 alert twitchNotice alert-{0}" role="alert">' + '<button type="button" aria-hidden="true" class="close" data-notify="dismiss">Ã—</button>' + '<span class="pulsing icon" data-notify="icon"></span> ' + '<span class="message text-center" data-notify="message">{2}</span>' + '<div class="progress" data-notify="progressbar">' + '<div class="progress-bar progress-bar-{0}" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>' + '</div>' + '<a href="{3}" target="{4}" data-notify="url"></a>' + '</div>'
                    });
                }
                // myToggle = setTimeout(twitchNotice, 50000);
            })
        });
    </script>
{% endfor %}
