{% extends 'partials/base.html.twig' %}
{% block content %}

    <div class="container work">
        <div class="row">
            <div class="col-12 p-0 title">
                <div class="text-center">
                    {{ page.header.work_title }}
                </div>
            </div>
            <hr>
            {# <div class="col-12">
                <div class="breadcrumb">
                    {% include 'partials/breadcrumbs.html.twig' %}
                </div>
            </div> #}
        </div>
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-6 pl-0 pr-0">
                    <div class="header">
                        Why?
                    </div>
                    <div class="subheader">
                        {{ page.header.workWhy }}
                    </div>
                </div>

                <div class="col-xs-12 col-6 pl-0 pr-0">
                    <div class="header">
                        Colors
                    </div>
                    <div>
                        {% set color = page.media[page.header.work_colors].quality(100) %}
                        {% set color_url = color.url %}
                        <img class="img-responsive colors" alt="{{ page.header.work_title }} Work Colors" src="{{ color_url }}"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="list-group gallery">
                <div class="header text-center">Design/Screenshots</div>
                <div class="row">
                    {% for work_images in page.header.work_images %}
                        {% set image = page.media[work_images.src].quality(100) %}
                        {% set image_url = image.url %}
                        {% if loop.first %}
                            <div class="row">
                                {# open row #}
                            {% endif %}
                            <div class="col-lg-4 col-12">
                                <div class="text-right">
                                    <div class="text-muted work-name">{{ work_images.title }}</div>
                                </div>
                                <a class="thumbnail fancybox" rel="ligthbox" href="{{ image_url }}">
                                    <img class="img-fluid" alt="{{ work_images.name }} Project" src="{{ image_url }}">
                                </a>
                            </div>
                            {% if loop.index % 3 == 0 %}
                            </div>
                            <div class="row">
                            {% endif %}
                            {% if loop.last %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
