{% extends 'partials/base.html.twig' %}
{% block content %}
    <!-- Jumbotron Hero -->
    <div class="jumbotron hero">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="row">
                        <div class="jumbotron inner-hero">
                            <h1 class="text">{{ site.data.settings.hero-title }}</h1>
                            <div class="animate-text">
                                {% for item in site.data.settings.hero %}
                                    <span>{{ item.name }}</span>{% endfor %}
                            </div>
                        </div>
                        <div class="cta-button">
                            <a class="btn btn-primary btn-lg btn-cta" href="{{ site.data.settings.hero-button.url }}" role="button">{{ site.data.settings.hero-button.title }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% for contact in page.header.contact %}
        <!-- Contact -->
        <div id="contact" class="contact">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="get-in-touch">
                            <h3 class="title">Want to hire me for your next project?</h3>
                            <form class="contact-form row row-contact" action="https://formspree.io/{{ site.email }}" method="POST">
                                <div class="form-field col x-50">
                                    <input id="name" class="input-text js-input" type="text" name="name" required="required">
                                    <label class="label" for="name">Name</label>
                                </div>
                                <div class="form-field col x-50">
                                    <input id="email" class="input-text js-input" type="email" name="_replyto" required="required">
                                    <label class="label" for="email">E-mail</label>
                                </div>
                                <div class="form-field col x-100">
                                    <input id="message" class="input-text js-input" type="text" name="_textarea" required="required">
                                    <label class="message label" for="message">Message</label>
                                </div>
                                <div class="form-field col x-100 btn-center">
                                    <input class="btn btn-primary btn-lg btn-cta" type="submit" value="Send">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    {% endfor %}

{% endblock %}